{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
		"baseUrl": ".",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "ESNext"]
	},
	"include": ["src/**/*", "utils/**/*"],
  "exclude": ["dist/**/*", "node_modules"]
}
